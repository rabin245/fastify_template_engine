<div>
  <h1>Create Post</h1>
  <form class="form" action="<%= post.id ? '/posts/'+post.id+'/edit' : '/posts' %>" method="POST">
    <input class="inputfield" type="text" name="title" placeholder="Title" value="<%= post.title %>">
    <input class="inputfield" type="text" name="content" placeholder="Content" value="<%= post.content %>">
    <input type="hidden" name="userId" value="<%= post.userId %>">
    <button class="auth-button" type="submit">
      <%= post.id ? 'Update' : 'Create' %>
    </button>
  </form>
</div>